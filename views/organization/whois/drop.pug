extends ../../layout

block content
  .container
    h1 Dropped

    if results
      h3 Results
      ul
        each result in results
          li= result
    else
      p No results. No operations were performed.

    if entity
      h3 Link information and/or GitHub user data
      if entity.login
        h4= 'Login: ' + entity.login
      if entity.id
        h4= 'ID: ' + entity.id

    if messages
      h2 Messages attached or errors:
      ul
        each message in messages
          li= message