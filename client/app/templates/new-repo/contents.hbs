{{app-header title="Create a new repository"}}
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>Repo template</h2>
      <div class="form-group">
        <label class="control-label">License</label>
        {{#if (is-equal filteredLicenseTemplates.length 1)}}
          {{#each filteredLicenseTemplates as |template|}}
            <div>
              <span> {{template.name}}</span>
              <small><i>{{template.description}}</i></small>
            </div>
          {{/each}}
        {{else}}
          {{#each filteredLicenseTemplates as |template|}}
            <div>
              {{#radio-button
                value=template.id
                groupValue=model.repo.license}}
                <span> {{template.name}}</span>
              {{/radio-button}}
              <small><i>{{template.description}}</i></small>
            </div>
          {{/each}}
        {{/if}}
      </div>
      <div class="form-group">
        <label class="control-label"><code>.gitignore</code> template</label>
        {{#x-select value=model.repo.gitIgnoreLanguage class="form-control" action="selectEntity" as |xs|}}
          {{#each model.metadata.gitIgnore.languages as |language|}}
            {{#xs.option value=language}}{{language}}{{/xs.option}}
          {{/each}}
        {{/x-select}}
      </div>
      <div class="form-group">
        <ul class="list-inline">
          <li>{{#link-to "new-repo.legal" class="btn btn-muted-more"}}Back{{/link-to}}</li>
          <li><button class="btn btn-primary" {{action "next" model.repo}}>Next</button></li>
        </ul>
      </div>
    </div>
    <div class="col-md-4">
      {{new-repo-steps step="contents"}}
