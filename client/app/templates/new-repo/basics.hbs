{{app-header title="Create a new repository"}}
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>GitHub basics</h2>
      <div class="form-group">
        <label class="control-label">Name</label>
        {{input value=model.repo.name placeholder="Repo Name (no spaces)" class="form-control" focus-out="validateName"}}
        {{model-validator-error errors=model.repo.errors.name text="Name"}}
      </div>
      <div class="form-group">
        <label class="control-label">Repository URL</label>
        <div><a>{{concat "https://github.com/" orgName "/" model.repo.name}}</a></div>
      </div>
      <div class="form-group">
        <label class="control-label">Description</label>
        {{input value=model.repo.description placeholder="Public-facing description" class="form-control" focus-out="validateDescription"}}
        {{model-validator-error errors=model.repo.errors.description text="Description"}}
      </div>
      {{#if hasMultipleVisibilities}}
        <div class="form-group">
          <label class="control-label">Initial visibility</label>
          {{#each model.metadata.visibilities as |visibility|}}
            <div>
              {{#radio-button
                value=visibility
                groupValue=model.repo.visibility}}
                <span> {{capitalize-first-letter visibility}}</span>
              {{/radio-button}}
            </div>
          {{/each}}
        </div>
      {{/if}}
      <ul class="list-inline">
        <li><button class="btn btn-muted-more" {{action "back" model.repo}}>Back</button></li>
        <li><button {{action "next" model.repo}} class="btn btn-primary">Next</button></li>
      </ul>
    </div>
    <div class="col-md-4">
      {{new-repo-steps step="basics"}}
    </div>
  </div>
</div>